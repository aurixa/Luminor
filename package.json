{
  "name": "luminor",
  "version": "0.1.0",
  "description": "3D browser-based game where players navigate a procedurally generated planet collecting energy",
  "main": "src/index.js",
  "scripts": {
    "start": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint src/**/*.{js,ts}",
    "lint:fix": "eslint src/**/*.{js,ts} --fix",
    "typecheck": "tsc --noEmit",
    "convert-to-ts": "node scripts/convert-to-ts.js",
    "convert-to-ts:list": "node scripts/convert-to-ts.js --list",
    "convert-to-ts:file": "node scripts/convert-to-ts.js",
    "ts:validate": "tsc --noEmit && eslint src/**/*.ts",
    "ts:migrate-core": "node scripts/convert-to-ts.js src/core/game.js src/core/controls.js src/core/gameLoop.js src/core/sceneSetup.js",
    "ts:migrate-phase1": "./scripts/migrate-phase1.sh",
    "ts:migrate-phase2": "./scripts/migrate-phase2.sh",
    "ts:migrate-phase3": "./scripts/migrate-phase3.sh",
    "ts:migrate-phase4": "./scripts/migrate-phase4.sh",
    "ts:migrate-phase5": "./scripts/migrate-phase5.sh",
    "ts:migrate-all": "npm run ts:migrate-phase1 && npm run ts:migrate-phase2 && npm run ts:migrate-phase3 && npm run ts:migrate-phase4 && npm run ts:migrate-phase5"
  },
  "dependencies": {
    "eslint": "^9.22.0",
    "three": "^0.159.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@types/three": "^0.162.0",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-promise": "^6.1.1",
    "globals": "^13.24.0",
    "typescript": "^5.4.5",
    "vite": "^5.4.14"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/luminor-game/luminor.git"
  },
  "author": "Code written by a mixture of AI (2025)",
  "license": "MIT"
}
